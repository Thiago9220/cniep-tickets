// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Ticket {
  id               Int       @id @default(autoincrement())
  ticketNumber     Int?      @unique
  title            String
  description      String?
  status           String    @default("aberto")
  priority         String    @default("media")
  type             String    @default("outros") // orientacao, correcao_tecnica, erro_temporario, duvida_negocial, melhorias, outros
  url              String?
  registrationDate DateTime?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  @@index([status])
  @@index([priority])
  @@index([type])
  @@index([registrationDate])
}

model WeeklyReport {
  id        Int      @id @default(autoincrement())
  weekKey   String   @unique // Formato: YYYY-WXX (ex: 2025-W49)
  period    String   // Formato: DD/MM/YYYY até DD/MM/YYYY
  data      Json     // Dados do relatório semanal em JSON
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([weekKey])
}

model MonthlyReport {
  id        Int      @id @default(autoincrement())
  monthKey  String   @unique // Formato: YYYY-MM (ex: 2025-11)
  data      Json     // Dados do relatório mensal em JSON
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([monthKey])
}

model QuarterlyReport {
  id          Int      @id @default(autoincrement())
  quarterKey  String   @unique // Formato: YYYY-QX (ex: 2025-Q4)
  data        Json     // Dados do relatório trimestral em JSON
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([quarterKey])
}

model Document {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  title     String
  filename  String
  fileType  String
  size      Int
  url       String
  category  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model User {
  id         Int      @id @default(autoincrement())
  email      String   @unique
  name       String?
  password   String?  // null se usar apenas OAuth
  avatar     String?  // URL da foto de perfil
  provider   String?  // "google", "github", ou null para email/senha
  providerId String?  // ID do provedor OAuth
  role       String   @default("user") // "user" ou "admin"
  resetPasswordToken   String?   @unique
  resetPasswordExpires DateTime?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  reminders  Reminder[]
  documents  Document[]
  manuals    Manual[]

  @@index([email])
  @@index([provider, providerId])
}

model Reminder {
  id              String   @id @default(cuid())
  userId          Int
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  titulo          String
  descricao       String
  concluido       Boolean  @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  dataEntrega     DateTime?
  recorrente      Boolean  @default(false)
  ultimaConclusao DateTime?
  prioridade      String   @default("media")
  categoria       String?
  ordem           Int?

  @@index([userId])
  @@index([userId, concluido])
  @@index([userId, dataEntrega])
}

model Manual {
  id        String   @id @default(cuid())
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  title     String
  content   String   @db.Text
  isGlobal  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}
