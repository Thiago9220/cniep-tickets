// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Ticket {
  id               Int       @id @default(autoincrement())
  ticketNumber     Int?      @unique
  title            String
  description      String?
  status           String    @default("aberto")
  priority         String    @default("media")
  type             String    @default("outros") // orientacao, correcao_tecnica, erro_temporario, duvida_negocial, melhorias, outros
  stage            String    @default("backlog") // backlog, desenvolvimento, homologacao, producao
  position         Int?      // ordem dentro da coluna (stage)
  url              String?
  registrationDate DateTime?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  @@index([status])
  @@index([priority])
  @@index([type])
  @@index([stage])
  @@index([stage, position])
  @@index([registrationDate])
}

model TicketComment {
  id        Int      @id @default(autoincrement())
  ticketId  Int
  userId    Int
  content   String   @db.Text
  createdAt DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  ticket Ticket @relation(fields: [ticketId], references: [id], onDelete: Cascade)

  @@index([ticketId])
  @@index([userId])
}

model TicketActivity {
  id        Int      @id @default(autoincrement())
  ticketId  Int
  userId    Int?
  type      String
  fromStage String?
  toStage   String?
  message   String?
  createdAt DateTime @default(now())

  user   User?  @relation(fields: [userId], references: [id], onDelete: SetNull)
  ticket Ticket @relation(fields: [ticketId], references: [id], onDelete: Cascade)

  @@index([ticketId])
}

model TicketFollower {
  id        Int      @id @default(autoincrement())
  ticketId  Int
  userId    Int
  createdAt DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  ticket Ticket @relation(fields: [ticketId], references: [id], onDelete: Cascade)

  @@unique([ticketId, userId])
}

model WeeklyReport {
  id        Int      @id @default(autoincrement())
  weekKey   String   @unique // Formato: YYYY-WXX (ex: 2025-W49)
  period    String   // Formato: DD/MM/YYYY até DD/MM/YYYY
  data      Json     // Dados do relatório semanal em JSON
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([weekKey])
}

model MonthlyReport {
  id        Int      @id @default(autoincrement())
  monthKey  String   @unique // Formato: YYYY-MM (ex: 2025-11)
  data      Json     // Dados do relatório mensal em JSON
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([monthKey])
}

model QuarterlyReport {
  id          Int      @id @default(autoincrement())
  quarterKey  String   @unique // Formato: YYYY-QX (ex: 2025-Q4)
  data        Json     // Dados do relatório trimestral em JSON
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([quarterKey])
}

model Document {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  title     String
  filename  String
  fileType  String
  size      Int
  url       String
  category  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model User {
  id         Int      @id @default(autoincrement())
  email      String   @unique
  name       String?
  password   String?  // null se usar apenas OAuth
  avatar     String?  // URL da foto de perfil
  provider   String?  // "google", "github", ou null para email/senha
  providerId String?  // ID do provedor OAuth
  role       String   @default("user") // "user" ou "admin"
  resetPasswordToken   String?   @unique
  resetPasswordExpires DateTime?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  reminders  Reminder[]
  documents  Document[]
  manuals    Manual[]
  workflows  Workflow[]

  @@index([email])
  @@index([provider, providerId])
}

model Reminder {
  id              String   @id @default(cuid())
  userId          Int
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  titulo          String
  descricao       String
  concluido       Boolean  @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  dataEntrega     DateTime?
  recorrente      Boolean  @default(false)
  ultimaConclusao DateTime?
  prioridade      String   @default("media")
  categoria       String?
  ordem           Int?

  @@index([userId])
  @@index([userId, concluido])
  @@index([userId, dataEntrega])
}

model Manual {
  id        String   @id @default(cuid())
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  title     String
  content   String   @db.Text
  isGlobal  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model Workflow {
  id          String   @id @default(cuid())
  userId      Int
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  title       String
  description String?
  category    String?  // Ex: "Negocial", "Penal", "Infraestrutura"
  // Estrutura do fluxograma como JSON:
  // nodes: Array de nós, cada um com:
  //   - id: string (único)
  //   - type: "question" | "contact" | "link" | "action" | "end"
  //   - title: string
  //   - content: objeto dependendo do tipo:
  //       question: { options: [{ label: string, targetNodeId: string }] }
  //       contact: { name, role?, phone?, email? }
  //       link: { url, description? }
  //       action: { description }
  //       end: { message? }
  //   - position?: { x, y } para layout visual
  nodes       Json?
  startNodeId String?  // ID do nó inicial
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@index([category])
}
